
.search-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
	padding: 20px;
}
.search-input {
	margin-top: 20px;  
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1px solid #0045cf;
    border-radius: 24px;
    padding: 8px;
	width: 80vw;
}
.search-text { 
   flex: 1;
   border: none;
   outline: none;
   font-size: 4vw;
   color: #1a1a1a;
} 

