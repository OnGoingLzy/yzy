.activeBar {
  font-size: 18px;
  border-bottom: 4px #1296DB solid;
}
.choice-bar-container {
  display: flex;
  width: 100%;
  overflow: auto;
  background: white;
  padding: 10px 0 0 0;
}
.choice-bar-item-box {
  height: 100%;
  width: 100px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 5px 0;
}
.order-container {
  position: absolute;
  top: 0;
  width: 100%;
}
.search-input {
  display: flex;
  align-items: center;
  border-radius: 24px;
  width: 80vw;
  background: white;
}
.search-container {
  display: flex;
  padding: 3vw;
  background: #1296DB;
}
.voice-icon {
  font-family: "Material Icons";
  font-size: 5vw;
  color: #9aa0a6;
  margin-left: 8px;
  line-height: 31px;
}
page {
  background-color: #ebebeb;
}

