.container {
  border-radius: 12px;
  width: 94vw;
  background: #fdf5e6;
  /* fallback for old browsers */
  /* Chrome 10-25, Safari 5.1-6 */
  background: linear-gradient(to top, #FFFFFF, #fdf5e6);
  /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
  min-height: 300px;
  border: 1px solid #fedeb1;
  display: inline-grid;
  justify-content: center;
  align-items: center;
}
.font-box {
  width: 50vw;
  border-radius: 10px;
  background: #1296DB;
  /* fallback for old browsers */
  /* Chrome 10-25, Safari 5.1-6 */
  background: linear-gradient(to right, #13a9f3, #1296DB);
  /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
  height: 50px;
  text-align: center;
}
.img-box {
  width: 60vw;
  height: 60vw;
  border: 3px solid #1296DB;
