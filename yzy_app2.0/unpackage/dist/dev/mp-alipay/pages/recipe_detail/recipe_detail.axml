<view><view class="{{(recipe.status=='可使用'||recipe.status=='已使用'?'true-header-box':'false-header-box')}}"><view></view><view><text style="font-size:17px;font-weight:bold;color:white;">{{recipe.status=='可使用'||recipe.status=='已使用'?'审核通过':recipe.status}}</text><text style="font-size:13px;color:white;">\n处方仅限本平台使用,自行配药不具有处方效力</text></view></view><view class="recipe-id-box"><text style="color:gray;">处方ID：</text><text style="font-weight:bold;">{{recipe.recipeBizId}}</text></view><view style="padding:5px;background:white;"><view class="recipe-box" style="{{(recipe.status=='可使用'?'background: #f3fff9;':'background: #f7f7f7;')}}"><view style="width:80%;"><view style="display:flex;align-items:center;text-align:center;"><image class="icon-class" style="width:16px;height:16px;" src="../../static/icon/cf.png"></image><text style="font-size:13px;color:gray;">药品处方\n</text></view><text style="font-weight:bold;">{{recipe.drugName+'\n'}}</text><text style="font-size:13px;color:gray;">{{recipe.drugSpecification+'/'+recipe.sellUnit+'\n'}}</text></view><view style="width:20%;text-align:right;display:grid;"><view><text style="{{(recipe.status=='可使用'||recipe.status=='已使用'?'color: #0ec385':'color: gray')}}">{{recipe.status}}</text></view><view style="display:flex;justify-content:flex-end;align-items:flex-end;"><text>{{'x'+recipe.amount}}</text></view></view></view><view style="text-align:center;align-items:center;"><text style="font-size:20px;font-weight:bold;">电子处方笺</text></view></view><view class="recipe-image-container"><block a:if="{{isLoading}}"><view class="loading-container"><image class="loading-spinner" src="../../static/icon/loading.svg"></image></view></block><image style="width:100vw;height:162.2vw;margin-bottom:30px;" src="{{recipe.recipePdfImgUrl}}" mode="aspectFit" data-event-opts="{{[['load',[['onImageLoad',['$event']]]],['tap',[['showRecipe']]]]}}" onLoad="__e" onTap="__e"></image></view><block a:if="{{recipe.status=='可使用'}}"><view data-event-opts="{{[['tap',[['toBuyGoods',['$event']]]]]}}" class="button" onTap="__e"><text style="color:white;font-size:20px;font-weight:bold;">去购药</text></view></block></view>