.recipe-image-container {
  width: 100vw;
  height: 162.2vw;
  text-align: center;
}
.loading-spinner {
  width: 50px;
  /* 加载圈的宽度 */
  height: 50px;
  /* 加载圈的高度 */
}
.button {
  width: 96vw;
  position: fixed;
  bottom: 30px;
  margin: 0 2vw;
  border-radius: 50px;
  background: #0ed196;
  /* fallback for old browsers */
  /* Chrome 10-25, Safari 5.1-6 */
  background: linear-gradient(to right, #78ffd6, #0ed196);
  /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
  text-align: center;
  align-items: center;
}
.recipe-box {
  padding: 5px;
  display: flex;
  border-radius: 5px;
  margin-top: 5px;
}
.true-header-box {
  width: 92vw;
  background: #0ed196;
  /* fallback for old browsers */
  /* Chrome 10-25, Safari 5.1-6 */
  background: linear-gradient(to right, #78ffd6, #0ed196);
  /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
  padding: 4vw;
}
.false-header-box {
  width: 92vw;
  background: #b9b9b9;
  /* fallback for old browsers */
  /* Chrome 10-25, Safari 5.1-6 */
  background: linear-gradient(to right, #b9b9b9, #a9a9a9);
  /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
  padding: 4vw;
}
.recipe-id-box {
  background: white;
  height: 40px;
  display: flex;
  padding-left: 20px;
  margin-bottom: 10px;
  align-items: center;
}
page {
  background-color: #ebebeb;
}

